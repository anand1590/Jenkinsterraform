pipeline {
    agent any
    stages {
        stage('Git checkout') {
           steps{
                git credentialsId: 'git', url: 'https://github.com/anand1590/Jenkinsterraform.git'
            }
        }
        stage('terraform format check') {
            steps{
                sh 'terraform fmt'
                sh 'terraform init'
                sh 'terraform apply --auto-approve'
                
            }
        }
        
        }
    }
